<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*<link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">*@
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="icon" href="~/favicon.ico" />
    <style type="text/css">
        #loading {
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            position: fixed;
            display: block;
            opacity: 0.7;
            background-color: #fff;
            z-index: 99;
            text-align: center;
        }

        #loading-image {
            position: absolute;
            top: 40%;
            left: 45%;
            z-index: 100;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div id="loading" style="display:none;">
        <img id="loading-image" src="~/icons/loading.gif" alt="Loading..." />
    </div>
    <header>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="~/Home/Index" class="navbar-brand top-logo"><img src="~/icons/demo.jpg" alt="logo"></a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav pull-right">
                        <li class="propClone">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        <li class="propClone">@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                        <li class="propClone">@Html.ActionLink("TestAPI", "TestAPI", "Home", new { area = "" }, null)</li>
                        <li class="propClone">@Html.ActionLink("MassInsert", "MassInsert", "Home", new { area = "" }, null)</li>
                        <li class="propClone">@Html.ActionLink("MassUpdate", "MassUpdate", "Home", new { area = "" }, null)</li>
                        <li class="propClone">@Html.ActionLink("PieChart", "PieChart", "Home", new { area = "" }, null)</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section class="sections">
        @RenderBody()
        <hr />
        <footer id="footer" class="footer">
            <div class="container">
                <div class="text-center txt-theme social-links">
                    <span><a href="tel:0912-XXXXXX" class="phone"><i class="fa fa-phone-square" style="font-size:24px;color:#FFFFFF"></i></a></span>&nbsp;&nbsp;
                    <span><a href="mailto:aaron.720426@gmail.com" class="rs_email" target="_blank"><i class="fa fa-envelope" style="font-size:24px;color:#FFFFFF"></i></a></span>&nbsp;&nbsp;
                    <span><a href="https://facebook.com/" class="facebook" target="_blank"><i class="fa fa-facebook-square" style="font-size:24px;color:#FFFFFF"></i></a></span>&nbsp;&nbsp;
                </div>
                <div class="text-center txt-theme">
                    <span>&copy; @DateTime.Now.Year - My ASP.NET Application.</span>
                </div>
            </div>
        </footer>
    </section>
    @RenderSection("scripts", required: false)
</body>
</html>
